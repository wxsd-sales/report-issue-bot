{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "text": "Notify Room",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Note: Please send the message within 5 minutes",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "comment",
      "isMultiline": true,
      "placeholder": "Enter your message"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Send",
      "id": "send",
      "data": {
        "send": "main",
        "deviceId": "",
        "actorId": ""
      }
    }
  ]
}
