{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "https://ae4ria.org/wp-content/uploads/2022/03/kisspng-world-bank-finance-financial-services-internationa-cognitive-5b4acb5c97be73.5011221415316283806216.jpg",
              "size": "Medium",
              "height": "50px"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "Report Issue Bot",
              "weight": "Lighter"
            },
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Issue Request",
              "wrap": true,
              "size": "Large",
              "spacing": "Small"
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Issue Type:",
      "wrap": true
    },
    {
      "type": "Input.ChoiceSet",
      "placeholder": "--select--",
      "spacing": "None",
      "id": "category"
    },
    {
      "type": "TextBlock",
      "text": "Requester Name:",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "spacing": "None",
      "id": "name"
    },
    {
      "type": "TextBlock",
      "text": "Description:",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "placeholder": "Please give a brief description about the issue you are facing.",
      "isMultiline": true,
      "spacing": "None",
      "id": "description"
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Submit",
          "id": "submit",
          "data": {
            "submit": "main"
          }
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2"
}
